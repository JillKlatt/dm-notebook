<p id="notice"><%= notice %></p>

<h1>Character Weapons</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_weapons.each do |character_weapon| %>
      <tr>
        <td><%= link_to 'Show', character_weapon %></td>
        <td><%= link_to 'Edit', edit_character_weapon_path(character_weapon) %></td>
        <td><%= link_to 'Destroy', character_weapon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

