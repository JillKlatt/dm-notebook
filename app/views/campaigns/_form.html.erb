
<%= form_with model: @campaign do |f|%>
    <%= f.hidden_field :user_id, value: current_user.id%>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :schedule %>
    <%= f.text_field :schedule %><br>
    <%= f.label :description %>
    <%= f.text_area :description, :size=>"50" %><br><br>
    <%= f.label :characters, "Add Characters: (optional)" %><br>
    <%= f.collection_check_boxes :character_ids, @characters, :id, :name %>  <br>
                    <br>
    <%= f.submit %>
<% end %>
